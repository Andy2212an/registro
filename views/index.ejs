<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD NodeJS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
</head>
<body>

  <header>
    <nav></nav>
  </header>
  
  <main>
    <section class="container mt-3">
      <div class="card">
        <div class="card-header">
          <a href="./create" class="btn btn-sm btn-primary">Registrar</a>
        </div>
        <div class="card-body">
          <table class="table table-sm table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Categoria</th>
                <th>Titulo</th>
                <th>Duracion</th>
                <th>Nivel</th>
                <th>Precio</th>
                <th>Fecha</th>
              </tr>
            </thead>
            <tbody>
              <% registros.forEach(cursos1 => { %>
                <tr>
                  <td><%= cursos1.id %></td>
                  <td><%= cursos1.idcategoria  %></td>
                  <td><%= cursos1.titulo  %></td>
                  <td><%= cursos1.duracion %></td>
                  <td><%= cursos1.nivel %></td>
                  <td><%= cursos1.precio %></td>
                  <td><%= cursos1.fechas %></td>
                  <td>
                    <a href="./edit/<%= cursos1.id %>" class="btn btn-sm btn-info">Editar</a>
                    <a href="./delete/<%= cursos1.id %>" class="btn btn-sm btn-danger delete">Eliminar</a>
                  </td>
                </tr> 
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>

  <footer>
    <p></p>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      //querySelector()       - un elemento | el primer elemento
      //querySelectorAll()    - una coleccion | array
      const lnkEliminar = document.querySelectorAll(".delete"); //array

      lnkEliminar.forEach(enlace => {
        enlace.addEventListener("click", (event) => {
          event.preventDefault(); //Detenemos el evento click de cada <a>

          if (confirm("¿Está seguro de eliminar?")){
            window.location.href = event.target.getAttribute('href');
          }

        });
      });

    });
  </script>

</body>
</html>
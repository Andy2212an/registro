<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>CRUD NodeJS</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous" />
</head>
<body>

  <header>
    <nav></nav>
  </header>
  
  <main>
    <section class="container mt-3">
      <div class="card">
        <div class="card-header">
          <a href="/create" class="btn btn-sm btn-primary">Registrar</a>
        </div>
        <div class="card-body">
          <table class="table table-sm table-striped">
            <thead>
              <tr>
                <th>ID</th>
                <th>Categoria</th>
                <th>Titulo</th>
                <th>Duracion</th>
                <th>Nivel</th>
                <th>Precio</th>
                <th>Fecha</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% registros.forEach(curso => { %>
                <tr>
                  <td><%= curso.id %></td>
                  <td><%= curso.idcategoria %></td>
                  <td><%= curso.titulo %></td>
                  <td><%= curso.duracion %></td>
                  <td><%= curso.nivel %></td>
                  <td>$<%= curso.precio.toFixed(2) %></td>
                  <td><%= curso.fechas %></td>
                  <td>
                    <a href="/edit/<%= curso.id %>" class="btn btn-sm btn-info">Editar</a>
                    <a href="/delete/<%= curso.id %>" class="btn btn-sm btn-danger delete">Eliminar</a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </section>
  </main>

  <footer>
    <p></p>
  </footer>

  <script>
    document.addEventListener("DOMContentLoaded", () => {
      const lnkEliminar = document.querySelectorAll(".delete");

      lnkEliminar.forEach(enlace => {
        enlace.addEventListener("click", (event) => {
          event.preventDefault();

          if (confirm("¿Está seguro de eliminar?")) {
            window.location.href = event.target.getAttribute('href');
          }
        });
      });
    });
  </script>

</body>
</html>